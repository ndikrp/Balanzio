<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="175dp"
    android:layout_height="190dp"
    android:elevation="3dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_item_food_home">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_food_home"
                android:layout_width="175dp"
                android:layout_height="155dp"
                android:scaleType="centerCrop"
                android:src="@drawable/dummy_food"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/label_kalori"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:src="@drawable/bg_label_kalori"
                app:layout_constraintBottom_toBottomOf="@+id/img_food_home"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/img_food_home"
                app:layout_constraintVertical_bias="0.912" />

            <TextView
                android:id="@+id/jumlah_kalori_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/label_kalori"
                app:layout_constraintEnd_toEndOf="@+id/label_kalori"
                app:layout_constraintStart_toStartOf="@+id/label_kalori"
                app:layout_constraintTop_toTopOf="@+id/label_kalori"
                tools:text="220 kal" />

            <TextView
                android:id="@+id/title_list_makanan_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_food_home"
                tools:text="Nasi Goreng" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>