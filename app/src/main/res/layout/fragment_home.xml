<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.HomeFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="18dp">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp">

                <SearchView
                    android:id="@+id/editText_Search"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/bg_search"
                    android:drawableEnd="@drawable/ic_search"
                    android:ems="10"
                    android:iconifiedByDefault="false"
                    android:paddingEnd="15dp"
                    android:queryHint="Cari makanan..."
                    android:searchIcon="@null"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/bt_favorite"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/bt_favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_favorite"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/editText_Search"
                    app:layout_constraintTop_toTopOf="@+id/editText_Search" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="18dp">

                <ImageView
                    android:id="@+id/bg_profile"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/bg_profile_home"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_hai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Hai,"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    app:layout_constraintBottom_toBottomOf="@+id/bg_profile"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.3" />

                <TextView
                    android:id="@+id/tv_name_profile_at_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Andhika"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/tv_hai"
                    app:layout_constraintTop_toBottomOf="@+id/tv_hai" />

                <ImageView
                    android:id="@+id/placeholder_profile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/placeholder"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/bg_profile"
                    app:layout_constraintHorizontal_bias="0.887"
                    app:layout_constraintStart_toStartOf="@+id/bg_profile"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="18dp">

                <ImageView
                    android:id="@+id/frame_kalori"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:src="@drawable/bg_search"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="0dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="@+id/frame_kalori"
                    app:layout_constraintTop_toTopOf="@+id/frame_kalori">

                    <ImageView
                        android:id="@+id/ic_kalori_home"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/ic_kalori" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_title_goals"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/title_goals"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TableLayout
                            android:id="@+id/tableLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:showDividers="middle"
                            android:divider="@color/accentColor"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_title_goals">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/textView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="664"
                                    android:textStyle="bold"
                                    android:textSize="30sp"
                                    android:textAlignment="center"/>

                                <TextView
                                    android:id="@+id/pembatas"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="|"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:paddingStart="5dp"
                                    android:paddingEnd="5dp"
                                    android:textSize="30sp"/>

                                <TextView
                                    android:id="@+id/textView2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2250"
                                    android:textStyle="bold"
                                    android:textSize="30sp"
                                    android:textAlignment="center" />
                            </TableRow>

                        </TableLayout>

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Kalori"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tableLayout" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="18dp">

                <TextView
                    android:id="@+id/title_rv_makanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_rv_makanan"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints" />


                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    app:layout_constraintTop_toBottomOf="@+id/title_rv_makanan"
                    tools:layout_editor_absoluteX="0dp">

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/filter_chips"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:chipSpacingHorizontal="8dp"
                        app:singleLine="true"
                        app:singleSelection="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_1"
                            style="@style/MyChip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sarapan"
                            android:textColor="@color/accentColor"
                            app:chipStrokeColor="@color/accentColor"
                            app:chipStrokeWidth="1dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_2"
                            style="@style/MyChip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Makan Siang"
                            android:textColor="@color/accentColor"
                            app:chipStrokeColor="@color/accentColor"
                            app:chipStrokeWidth="1dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_3"
                            style="@style/MyChip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Makan Malam"
                            android:textColor="@color/accentColor"
                            app:chipStrokeColor="@color/accentColor"
                            app:chipStrokeWidth="1dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_4"
                            style="@style/MyChip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Camilan"
                            android:textColor="@color/accentColor"
                            app:chipStrokeColor="@color/accentColor"
                            app:chipStrokeWidth="1dp" />

                    </com.google.android.material.chip.ChipGroup>
                </HorizontalScrollView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_makanan_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
                    tools:listitem="@layout/item_beranda_makanan" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>